<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcddz.dao.HouTaiDengLuDao">
<!-- 查询账号和密码是否一致 -->
   <select id="findZhangHaoAndPassword" parameterType="com.hcddz.entity.HouTaiDengLu" resultType="Map">
		SELECT * FROM ddzhoutai.tbl_user AS oo
		where 1=1
		and oo.username=#{username}
		and oo.password=#{password}
	</select>
</mapper>